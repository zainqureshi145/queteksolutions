---
import Container from "@components/container.astro";
import Dropdown from "./dropdown.astro";
import { Image } from "@astrojs/image/components";
import logoImage from "assets/logo.png";

const menuitems = [
  {
    title: "Services",
    path: "#",
    children: [
      { title: "Technology Staffing", path: "/staffing" },
      { title: "Product Development", path: "/development" },
      { title: "IT Training", path: "/training" },
    ],
  },
  {
    title: "Technologies",
    path: "/technologies",
  },
  {
    title: "Our Mission",
    path: "/mission"
  },
  {
    title: "Contact",
    path: "/contact",
  },
  // {
  //   title: "Blog",
  //   path: "/blog",
  // },
];
---

<Container>
  <header
    class="flex flex-col lg:flex-row justify-between items-center"
    x-data="{ open: false }"
    x-init="$watch('open', value => console.log(value))"
  >
    <div class="flex w-full lg:w-auto items-center justify-between">
      <a href="/" class="text-lg">
        <Image src={logoImage} alt="logo" loading="eager" format="avif" class:list={"brightness-125 mt-10 w-auto h-[125px]"} />
      </a>
      <div class="block lg:hidden">
        <button @click="open = !open" class="text-black hover:text-gray-700">
          <svg fill="currentColor" class="w-4 h-4" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path
              x-cloak
              x-show="open"
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M18.278 16.864a1 1 0 01-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 01-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 011.414-1.414l4.829 4.828 4.828-4.828a1 1 0 111.414 1.414l-4.828 4.829 4.828 4.828z"
            ></path>
            <path
              x-show="!open"
              fill-rule="evenodd"
              d="M4 5h16a1 1 0 010 2H4a1 1 0 110-2zm0 6h16a1 1 0 010 2H4a1 1 0 010-2zm0 6h16a1 1 0 010 2H4a1 1 0 010-2z"></path>
          </svg>
        </button>
      </div>
    </div>
    <nav class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0" :class="{ 'block': open, 'hidden': !open }" x-transition>
      <ul class="flex flex-col lg:flex-row lg:gap-3">
        {
          menuitems.map((item, index) => (
            <>
              {item.children && <Dropdown title={item.title} children={item.children} lastItem={index === menuitems.length - 1} />}

              {!item.children && (
                <li>
                  <a href={item.path} class="flex lg:px-3 py-2 text-black hover:text-gray-700 mb-5">
                    {item.title}
                  </a>
                </li>
              )}
            </>
          ))
        }
      </ul>
    </nav>
  </header>
</Container>