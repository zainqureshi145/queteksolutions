---
import { Image } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-8">
  <div class="py-6 md:order-1 hidden md:block">
    <Image
      src={heroImage}
      alt="Astronaut in the air"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
      Quetek Solutions
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Creating groundbreaking technology product solutions for leading
      companies. Our team are committed to providing smart product solutions for
      any size of project.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href=""
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

        Button_One</Link
      >
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href=""
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        Button_Two</Link
      >
    </div>
  </div>
</main>
